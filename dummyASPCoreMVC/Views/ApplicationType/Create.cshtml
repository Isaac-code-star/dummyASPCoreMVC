
@model dummyASPCoreMVC.Models.ApplicationType

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row mb-4">
            <h2 class="text-black pl-3">Add Application Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="TableName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TableName" class="form-control"/>
                        <span asp-validation-for="TableName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info text-white w-100" value="Create"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4">
                @*leave empty for now*@
            </div>
        </div>
    </div>
</form>

