@model IEnumerable<dummyASPCoreMVC.Models.CategoryModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                New Category
            </a>
        </div>
    </div>
</div>

<br /> <br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>
                    Display Order
                </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width:50%">@obj.CategoryName</td>
                    <td style="width:30%">@obj.CategoryDisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-id="@obj.CategoryId" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Category" asp-route-id="@obj.CategoryId" asp-action="Delete" class="btn btn-danger">Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <p>No Category Found</p>
    
}

