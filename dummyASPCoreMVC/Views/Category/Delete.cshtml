@model dummyASPCoreMVC.Models.CategoryModel

<form method="post">
    <input asp-for="CategoryId" hidden/>
    <div class="border p-3">
        <div class="form-group row mb-4">
            <h2 class="text-black pl-3">Delete Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="CategoryName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryName" class="form-control" readonly/>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="CategoryDisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryDisplayOrder" disabled class="form-control"/>

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger text-white w-100" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4">
                @*leave empty for now*@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" /> }
}
